# Server Configuration
PORT=5000
NODE_ENV=development

# Redis Configuration (for queue)
REDIS_URL=redis://127.0.0.1:6379

# Rate Limits
EMAIL_RATE_LIMIT=5
API_RATE_LIMIT=100

# Job Retention (7 days in milliseconds)
JOB_RETENTION_PERIOD=604800000

# Maximum Email Size (10MB in bytes)
MAX_EMAIL_SIZE=10485760

# Default SMTP Config (used for testing)
# DEFAULT_SMTP_HOST=smtp.example.com
# DEFAULT_SMTP_PORT=587
# DEFAULT_SMTP_SECURE=false
# DEFAULT_SMTP_USER=user@example.com
# DEFAULT_SMTP_PASS=your_password